{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["dist/*", ".next/"]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 125
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noAsyncPromiseExecutor": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
